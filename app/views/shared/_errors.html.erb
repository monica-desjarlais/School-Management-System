<!-- ERRORS SECTION-->

<% if obj.errors.any? %>

<div class="row">
<div class="col-xs-8 col-xs-offset-2">
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h2 class="panel-title">

        <%= pluralize( obj.errors.count, "error") %>
   prevent the action from being completed: </h2>
             <div class="panel-body">
               <ul>
                 <!--errors.full_messages returns an array of all the error messages-->
                 <% obj.errors.full_messages.each do |msg| %>
                 <li><%= msg %></li>   <!--display all existent messages in an ul list-->
                 <% end %>  <!--end of display msg action-->
               </ul>
               </div>
             </div>
           </div>
         </div>
       </div>
<% end %>  <!-- ERRORS SECTION END-->
