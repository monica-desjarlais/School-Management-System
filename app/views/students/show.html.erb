<!--==========================
    Student Page
  ============================-->
  <section id="why-us">
    <div class="container">
      <header class="section-header">
        <h1 class="center"><strong><%= @student.name %></strong></h1>
      </header>


            <div class ="stud_wrapper">
              <div class="stud_info"  >
                  <h3 class="center"> Email: <strong><%= @student.email %></strong></h3><br>

                  <h4 class="center"> Course Enrollments: <% if @student.courses.empty?%>
                    <strong>None</strong> </h4>
                    <% else %>

                    <% @student.courses.each do |course|  %>
                    <h4><strong><%= course.name %></strong> </h4>
                    <% end %>

                    <% end %>


              </div> <!-- stud_info-->
              </div> <!-- stud_wrapper-->

                <!-- edit profile, only for the student who own this profile-->
                <% if current_user == @student %>
              <div class="form-group">
               <div class="col-sm-offset-2 col-sm-10">
                 <div id="edit">
                <button type="submit" id="stud" class="btn btn-default" align="center"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%=link_to "Edit your profile", edit_student_path(@student) %></button>
               </div>
                </div>
             </div> <!-- end of form group-->
             <% end %>

    </div>  <!--container -->
  </section>  <!--section-->
